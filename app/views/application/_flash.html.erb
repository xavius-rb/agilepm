<div class="toast-container position-absolute p-3 top-0 end-0" style="z-index: 1">
  <% flash.each do |type, messages| %>
    <% bg_class = type == "notice" ? "bg-success" : "bg-danger" %>
    <% Array.wrap(messages).each do |message| %>
      <div class="toast align-items-center text-white border-0 <%= bg_class %>" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">
            <%= message %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
  <% end %>
  <div data-controller="toast-messages"></div>
</div>
