<html lang="en">
  <head>
    <title>Agilepm</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <header><%= render "application/nav" %></header>
    <aside><%= render "application/flash" %></aside>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <footer></footer>
  </body>
</html>
